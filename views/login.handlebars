<div class="container-fluid">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6" center>
            <div class="panel panel-default login">
                <div class="panel-heading">
                    {{!--<h3 class="panel-title">Users may Login. Others need to Sign Up to open new account</h3>--}}
                    <h3 class="panel-title">{{headerMessage}}</h3>
                </div>
                <div class="panel-body">
                    <form action="/login" method="post">
                        <div class="div-user">
                            <label>Username</label>
                            <input id="user" name="username" placeholder="Username" type="text" />
                        </div>
                        <div class="div-pw">
                            <label>Password</label>
                            <input id="pw" name="password" placeholder="Password" type="password">
                        </div>
                        <div class="form-actions div-btns">
                            <button type="submit" class="btn btn-success btn-login">Users Login</button>
                            <hr>
                            <a class="btn btn-primary btn-register" href="/signup">Click to Get Sign Up Form to Open New Account</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>